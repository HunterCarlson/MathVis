<Window x:Class="MathVis.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MathVis"
        mc:Ignorable="d"
        Title="MainWindow" Height="375" Width="525" Background="#FF202020" Loaded="Window_Loaded">
    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Image x:Name="Image" Width="500" Stretch="None" Margin="10" Height="300" Grid.Row="1" />
        <Button Grid.Row="0" x:Name="Button1" Content="Button1" HorizontalAlignment="Left" Margin="10,10,0,0"
                VerticalAlignment="Top" Width="75" Click="Button1_Click" />
        <Button Grid.Row="0" x:Name="ClearButton" Content="Clear" HorizontalAlignment="Left" Margin="90,10,0,0"
                VerticalAlignment="Top" Width="75" Click="ClearButton_Click" />

    </Grid>
</Window>